import random
print('Guess the number Game')
x= random.randint(1,100)
user =- 1

while True:
    user != x
    user = int(input('Guess the number from 1 to 100 : '))

    if user > x:
        print('The number must be less')

    elif user< x :
        print('The number must be greater')
    else:
        print('You win, this number is = ' + str(x))


        w = input('You wanna repeat +/- : ')
        if w != '+':
            print('See you later')
            break
